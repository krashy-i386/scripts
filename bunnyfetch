#!/bin/bash

f=3 b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done
d=$'\e[1m'
t=$'\e[0m'
v=$'\e[7m'

# Items
sep="• • •"
s=$d$f0$sep$t

k="kernel"
kernel="$(uname -r | cut -d '-' -f1)"

sh="shell"
shell=$(basename $SHELL)

dt="date"
date="$(date '+%a %e %b %H:%M:%S')"

user="$USER"

# (\ /)
# ( · ·)
# c(")(")

# (\ /)
# ( . .)
# c(")(")

cat << EOF
$f5         ------------ $user ------------
$f6(\ /)    $sh $t$sep $shell
$f5( $d. .$t$f5)   $k $t$sep $kernel$f6
c(")(")  $dt $t$sep $date
$f5         -------------------------------

EOF
